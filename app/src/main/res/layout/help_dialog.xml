<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="352dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:clickable="false"
            android:text="Help"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="154dp"
                    android:layout_height="40dp"
                    android:src="@drawable/furniture_white" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="228dp"
                    android:layout_height="40dp"
                    android:text="Furniture"
                    android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                    android:textSize="18sp"
                    android:translationY="7dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="155dp"
                    android:layout_height="40dp"
                    android:src="@drawable/games_white"/>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="228dp"
                    android:layout_height="40dp"
                    android:text="Electronics"
                    android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                    android:textSize="18sp"
                    android:translationY="7dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:src="@drawable/books_white" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="228dp"
                    android:layout_height="40dp"
                    android:text="Books"
                    android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                    android:textSize="18sp"
                    android:translationY="7dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:src="@drawable/sports_white" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="228dp"
                    android:layout_height="40dp"
                    android:text="Sport Gear"
                    android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                    android:textSize="18sp"
                    android:translationY="7dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:src="@drawable/clothes_white" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="228dp"
                    android:layout_height="40dp"
                    android:text="Clothing"
                    android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                    android:textSize="18sp"
                    android:translationY="7dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:src="@drawable/accessories_white" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="228dp"
                    android:layout_height="40dp"
                    android:text="Accessories"
                    android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                    android:textSize="18sp"
                    android:translationY="7dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:src="@drawable/others_white" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="228dp"
                    android:layout_height="40dp"
                    android:text="Other"
                    android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                    android:textSize="18sp"
                    android:translationY="7dp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>