<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/games_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="352dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:clickable="false"
            android:text="Help"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.40"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="131dp"
                android:layout_height="match_parent"
                android:lineSpacingExtra="10sp"
                android:text="Electronics"
                android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.40"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.40"
                app:srcCompat="@drawable/furniture_white" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.93"
                android:lineSpacingExtra="10sp"
                android:text="Furniture"
                android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.40"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.40"
                    app:srcCompat="@drawable/books_white" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="228dp"
                    android:layout_height="match_parent"
                    android:lineSpacingExtra="10sp"
                    android:text="Books"
                    android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.40"
                    app:srcCompat="@drawable/sports_white" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="228dp"
                    android:layout_height="match_parent"
                    android:lineSpacingExtra="10sp"
                    android:text="Sport Gear"
                    android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.40"
                    app:srcCompat="@drawable/clothes_white" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="228dp"
                    android:layout_height="match_parent"
                    android:lineSpacingExtra="10sp"
                    android:text="Clothing"
                    android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.40"
                    app:srcCompat="@drawable/accessories_white" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="228dp"
                    android:layout_height="match_parent"
                    android:lineSpacingExtra="10sp"
                    android:text="Accessories"
                    android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.40"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.40"
            app:srcCompat="@drawable/others_white" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="228dp"
            android:layout_height="match_parent"
            android:lineSpacingExtra="10sp"
            android:text="Other"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>